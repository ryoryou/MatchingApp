<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ryo.matchingapp.UserProfile">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">



            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="2"
                android:layout_width="fill_parent"
                android:layout_height="0dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/ic_launcher"
                    android:background="#ffffff"
                    android:id="@+id/userImage" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="16dp"
                        android:background="#ffffff"
                        android:id="@+id/profile_userName"
                        android:text="No Name" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="16dp"
                        android:textSize="18dp"
                        android:text="New Text"
                        android:id="@+id/profile_userDistance" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:background="#ffffff"
                android:scrollbars = "vertical"
                android:text="No Content"
                android:id="@+id/profile_userDescription" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="0dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:text="Back"
                    android:onClick="clickedBackButton"
                    android:id="@+id/profile_backButton" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:text="Meet"
                    android:onClick="clickedMeetButton"
                    android:id="@+id/profile_meetButton" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</RelativeLayout>
